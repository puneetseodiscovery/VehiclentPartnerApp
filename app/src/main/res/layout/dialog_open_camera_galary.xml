<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/relative_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select file to Upload..."
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_sp16"
            android:layout_marginTop="@dimen/margin_dp25"
            android:layout_marginLeft="@dimen/margin_dp25"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_dialog2"
        android:layout_below="@+id/relative_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp25"
        android:layout_marginRight="@dimen/margin_dp25">
        <TextView
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_dp5"
            android:drawablePadding="@dimen/margin_dp15"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_sp16"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:layout_marginLeft="@dimen/margin_dp25"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_dialog4"
        android:layout_below="@+id/relative_dialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp15"
        android:layout_marginRight="@dimen/margin_dp25">

        <TextView
            android:id="@+id/open_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_dp5"
            android:drawablePadding="@dimen/margin_dp15"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_sp16"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:layout_marginLeft="@dimen/margin_dp25"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_dialog5"
        android:layout_below="@+id/relative_dialog4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp10">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="Cancel"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize_sp16"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_dp5"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="@dimen/margin_dp25"/>
    </RelativeLayout>

</RelativeLayout>