<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_400_splash"
    tools:context=".login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/vehiclentlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:background="@drawable/new_logo">

            </ImageView>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehiclentlogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim50"
                android:text="Username"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dim30" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_username"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim10"
                android:layout_marginRight="@dimen/dim20"
                android:background="@drawable/edittextwithborder"
                android:drawableRight="@drawable/user"
                android:hint="Mobile/Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dim10"
                android:paddingRight="@dimen/dim10"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim20"
                android:text="Password"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dim30" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_pass"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim10"
                android:layout_marginRight="@dimen/dim20"
                android:background="@drawable/edittextwithborder"
                android:drawableRight="@mipmap/icon_eye_password"
                android:hint="**********"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim10"
                android:paddingRight="@dimen/dim10"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim20"
                android:text="Forgot password?"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/dim20" />

            <Button
                android:id="@+id/login"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_forgot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim35"
                android:layout_marginBottom="@dimen/margin_dp25"
                android:background="@drawable/custom_signin_bg"
                android:text="LOGIN"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim25" />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>